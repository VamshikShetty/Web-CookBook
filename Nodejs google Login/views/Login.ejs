<body >


<h1 class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="text-align: center; margin-top: 150px;"> Login</h1>
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style ="display:flex; justify-content: center;">



    <div class="col-xs-12 col-sm-7 col-md-6 col-lg-4 " style=" max-width: 350px; min-width: 300px; top:10px; background-color:#F9F9F9; padding:20px; margin-bottom:15px; text-align: center;  border-radius:5px 5px 5px 5px;">

        <div class="col-lg-12">
            <div class="col-lg-12">
                <button class=" loginBtn loginBtn--google" id="googlebutton"> 
                        <!-- remove data-approvalprompt="force" during deployment -->
                        Continue with Google </button> 
            </div>
        </div>




        <div class="col-xs-12 col-sm-12 col-lg-12" style="text-align: center;  margin-top:10px; padding-top: 20px; border-top: 1px solid grey;">

            <form class="" action="/login" autocomplete="on" method="POST" id="loginForm">

                <div class="input-group login-input">
                    <span class="inputSpan  input-group-addon" ><i class="glyphicon glyphicon glyphicon-user"></i></span>
                    <input required type="text" class="form-control inputBar" name="email" placeholder="Email" style="z-index: 0;">
                </div>


                <div class="input-group login-input" style="margin-top: 10px;">
                    <span class="inputSpan  input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input  required type="password" class="form-control" name="password" placeholder="Password" style="z-index: 0;">
                </div>


                <button class="btn btn-lg btn-primary " style="margin-top: 30px;" type="submit">
                    Login
                </button>

            </form>

        </div>

        <div class="col-xs-12 col-sm-12 col-lg-12" style="text-align: center;  margin-top:20px; border-top: 1px solid grey;">
                <button class="btn btn-lg btn-default " style="margin-top: 10px;" type="submit" id="registerButton">
                    Register
                </button>
        </div>



    </div>
</div>

<div class="coverWeb" id="signUpDiv">

    <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3"  style=" max-width: 330px; min-width: 300px; top:30px; background-color:#F9F9F9; padding:0px; margin-bottom:15px; text-align: center; height:400px; border-radius:5px 5px 5px 5px;">
        <div class="col-lg-12 col-lg-12 col-lg-12 col-lg-12" id="signUpHeader" style="padding:10px 0px 0px 0px; margin-bottom:5px; color:#7E7E7E; background-color:#EDF0F0; border-radius:5px 5px 0 0;">
            <p>
                <font style="font-family:Verdana; font-size:110%;">
                    Fill in your info
                </font>     
            </p>
        </div>
                
        <form class="" action="/signup" autocomplete="off" method="POST" id="signUpForm" >
                <div class="col-xs-12 col-sm-12 col-lg-12" style="   margin-top:15px;">
                    
                    <div class="input-group login-input" style="margin-top: 10px;">
                        <div class="input-group login-input">
                            <span class="inputSpan  input-group-addon" ><i class="glyphicon glyphicon glyphicon-user"></i></span>
                            <input required  type="text" class="inputBar  form-control " name="name" placeholder="Full Name">
                        </div>
                    </div>
                
                    <div class="input-group login-input" style="margin-top: 10px;">
                       <div class="input-group login-input">
                            <span class="inputSpan  input-group-addon" ><i class="glyphicon glyphicon glyphicon-envelope"></i></span>
                            <input required type="text" class="inputBar  form-control " name="email" placeholder="Email">
                        </div>
                    </div>

                    <div class="input-group login-input" style="margin-top: 10px;">
                       <div class="input-group login-input">
                            <span class="inputSpan  input-group-addon" ><i class="glyphicon glyphicon-earphone"></i></span>
                            <input required type="text" class="inputBar  form-control " name="phone" placeholder="Phone Number">
                        </div>
                    </div>

                    <div class="input-group login-input" style="margin-top: 10px;">                        
                      <div class="input-group login-input">
                            <span class="inputSpan  input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input  required type="password" class="inputBar  form-control " name="password" placeholder="Password">
                        </div>
                    </div>

                    <div class="input-group login-input" style="margin-top: 10px;">
                        <div class="input-group login-input">
                            <span class="inputSpan  input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            <input   type="date" class="form-control " name="dob" >
                        </div>
                    </div>

                    <div class="input-group login-input" style="margin-top: 10px;">
                        <div class="checkbox" >
                            <label  style="font-weight:600; font-family:Arial;">
                                <input type="checkbox" value="TC"> 
                                    <font style="font-size:90%">
                                        I agree to 
                                    </font> 
                                    <a href="#">
                                        <font style="font-size:80%">
                                            Terms and Condition
                                        </font>
                                    </a>
                            </label>
                        </div>
                    </div>

                                    
                    <button class="btn btn-lg btn-primary ">
                            Sign Up
                    </button>
                    
                </div>
        </form>
        
